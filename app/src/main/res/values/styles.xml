<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- tablayout-->
    <style name="DarkTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/DarkTabLayoutText</item>
        <item name="tabSelectedTextColor">@color/colorAccent</item>
    </style>
    <!-- tablayout-->
    <style name="DarkTabLayoutText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
